<%- layout('layout/boilerplate') %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="row mb-3">
                <div class="col-12 col-md col-lg-8">
                    <div class="row">
                        <div class="col-md col-lg-5">
                            <% if(!currentUser.image){ %>
                            <div
                                class="border profile-image-div m-auto d-flex flex-column justify-content-center align-items-center bg-light shadow-sm">
                                <div>
                                    <button class="btn btn-primary w-auto" data-bs-toggle="modal"
                                        data-bs-target="#imageUploadModal">Upload image</button>
                                </div>
                            </div>
                            <% }else{ %>
                            <div
                                class="border profile-image-div mb-3 m-auto d-flex flex-column justify-content-center align-items-center">
                                <img class="rounded-circle profile-image" src="<%= currentUser.image.thumbnail %> " alt="">
                            </div>
                            <% } %>
                             <div class="d-flex p-3 justify-content-center">
                                 <a href="/user/profile/edit" class="btn btn-warning me-3 edit-button p-2 shadow-sm">Edit profile</a>
                                     <button class="btn btn-danger shadow-sm" data-bs-toggle="modal"
                                         data-bs-target="#deleteProfileModal">Delete profile</button>
                             </div>
                        </div>
                        <div class="col-md col-lg-7 details-border shadow">
                                <div class="d-flex justify-content-between border-bottom p-3">
                                    <p class="m-0">Age</p>
                                    <p class="m-0"><%= currentUser.age %></p>
                                </div>
                                <div class="d-flex justify-content-between border-bottom p-3">
                                    <p class="m-0">Heigth</p>
                                    <p class="m-0"><%= currentUser.heigth %></p>
                                </div>
                                <div class="d-flex justify-content-between border-bottom p-3">
                                    <p class="m-0">Weight</p>
                                    <p class="m-0"><%= currentUser.weight %></p>
                                </div>
                                <div class="d-flex justify-content-between border-bottom p-3">
                                    <p class="m-0">Gender</p>
                                    <p class="m-0"><%= currentUser.gender %></p>
                                </div>
                                <div class="d-flex justify-content-between border-bottom p-3">
                                    <p class="m-0">Goal</p>
                                    <p class="m-0"><%= currentUser.goal %></p>
                                </div>
                                <div class="d-flex justify-content-between border-bottom p-3">
                                    <p class="m-0">E-mail</p>
                                    <p class="m-0"><%= currentUser.username %></p>
                                </div>
                                <div class="d-flex justify-content-between p-3">
                                    <p class="m-0">Subscription</p>
                                    <p class="m-0"><%= currentUser.subscriptionType %></p>
                                </div>
                               
                        </div>
                    </div>
                </div>
                
                <div class="col-4 d-lg-flex justify-content-center d-none">
                    <% if(currentUser.gender==='Male'){%>
                    <img class=""
                        src="https://res.cloudinary.com/dzainyxbb/image/upload/v165005/Wellness/Male_hjs02m.png"
                        alt="">
                    <% }else{ %>
                    <img class=""
                        src="https://res.cloudinary.com/dzainyxbb/image/upload/v165249/Wellness/Female_krv4jk.png"
                        alt="">
                    <% } %>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="imageUploadModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Profile image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form novalidate class="needs-validation" action="/user/profile" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <input required type="file" name="image">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteProfileModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                All the data will be erased!
            </div>
            <div class="modal-footer">
                <form action="/user/profile?_method=DELETE" method="POST">
                    <button class="btn btn-danger m-2">Proceed!</button>
                </form>
            </div>
        </div>
    </div>
</div>