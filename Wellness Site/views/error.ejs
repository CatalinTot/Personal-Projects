<%- layout('layout/boilerplate') %>

<% if(err.message === 'Page Not Found'){%>
<div class="row justify-content-center">
    <div class="col-11 col-md-6 d-flex flex-column">
        <div class="alert alert-danger">
            <h3 class="m-0"><%= err.message %> </h3>
        </div>
        <img class="w-100"
            src="https://res.cloudinary.com/dzainyxbb/image/upload/v1610006888/Wellness/undraw_page_not_found_su7k_bipj4b.png"
            alt="">
        <a class="btn btn-primary text-center m-auto" href="/about">Return to home page</a>
    </div>
</div>
<% }else{ %>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%= err.message %> </h4>
            <hr>
            <p class="mb-0"><%= err.stack %> </p>
        </div>
    </div>
</div>
<% } %>