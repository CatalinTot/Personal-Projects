<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title %> </title>
    <link rel="stylesheet" href="/CSS/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>

<body>
    <!-- include the navbar on every page -->
    <%- include('../partials/navbar') %>
    <section class="body">
        <div class="container">
            <div class="row justify-content-center m-0 mt-3">
                <div class="col-10 p-0">
                    <%- include('../partials/flash') %>
                </div>
            </div>
        </div>
        <%- body %>
    </section>
    <script>
        const currentUser = '<%-JSON.stringify(currentUser)%>';
    </script>

    <!-- only if there is a user logged in we can load the live chat -->
    <% if(currentUser && currentUser.isPaid === true){ %>
    <%- include('../partials/chat') %>
    <% } %>

    <!-- include the footer on every page -->
    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous">
    </script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script src="/JS/formValid.js"></script>
    <script>
        AOS.init();
    </script>
    <!-- load certain script only if the pages have certain names -->
    <% if(title === 'Plan'){ %>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="/JS/stripe.js"></script>
    <% } %>

    <script src="/JS/success.js"></script>
    <% if(title ==='Gift'){ %>
    <script src="/JS/sphere.js"></script>
    <script src="/JS/food.js"></script>
    <script src="/JS/plate.js"></script>
    <% } %>

    <% if(title ==='Results'){ %>
    <script src="/JS/slider.js"></script>
    <% } %>
    <% if(title ==='Progress'){ %>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="/JS/chart.js"></script>
    <% } %> 
    <% if(title ==='About'){ %>
    <script type="text/javascript" src="//www.termsfeed.com/public/cookie-consent/3.1.0/cookie-consent.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="/JS/cookie.js"></script>
        
    <% } %> 

    

</body>

</html>